{
  "name": "boardsync-api",
  "version": "1.0.0",
  "description": "API REST para o BoardSync - Sistema profissional de gerenciamento de tarefas",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:api": "node test-api.js",
    "setup": "node setup-easy.js",
    "setup:sqlite": "node setup-sqlite.js",
    "dev:sqlite": "DB_TYPE=sqlite nodemon src/server.js",
    "start:sqlite": "DB_TYPE=sqlite node src/server.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:setup": "docker-compose up -d --build",
    "db:create": "createdb boardsync",
    "db:schema": "psql -d boardsync -f database/schema.sql",
    "db:setup": "npm run db:create && npm run db:schema",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "seed": "knex seed:run",
    "db:reset": "npm run migrate:rollback && npm run migrate && npm run seed"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^12.2.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "sharp": "^0.32.6",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "kanban",
    "task-management",
    "project-management",
    "collaboration",
    "api"
  ],
  "author": "BoardSync Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
