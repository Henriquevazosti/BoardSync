# ========================================
# CONFIGURAÇÕES DO AMBIENTE
# ========================================

# Servidor
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Base de dados
DB_HOST=localhost
DB_PORT=5432
DB_NAME=boardsync_dev
DB_USER=postgres
DB_PASSWORD=your_password
DB_SSL=false

# Para produção, use uma URL completa:
# DATABASE_URL=postgresql://user:password@host:port/database

# Autenticação
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Redis (para cache e sessões)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Upload de arquivos
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain
UPLOAD_DEST=uploads/

# Configurações de email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=BoardSync <noreply@boardsync.com>

# URLs e CORS
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3007,http://localhost:3008

# Logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket
SOCKET_CORS_ORIGIN=http://localhost:3000

# Debug
DEBUG=boardsync:*
